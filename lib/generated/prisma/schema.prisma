generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authorizationCodes AuthorizationCode[]      @relation("UserAuthorizationCodes")
  accessTokens       AccessToken[]            @relation("UserAccessTokens")
  refreshTokens      RefreshToken[]           @relation("UserRefreshTokens")
  permissions        UserResourcePermission[] @relation("UserPermissions") // Added relation to UserResourcePermission
}

model Client {
  id           String   @id @default(uuid())
  clientId     String   @unique
  clientSecret String
  redirectUris String // Changed from String[] to String
  name         String
  jwksUri      String? // New field for JWKS URI
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  authorizationCodes AuthorizationCode[] @relation("ClientAuthorizationCodes")
  accessTokens       AccessToken[]       @relation("ClientAccessTokens")
  refreshTokens      RefreshToken[]      @relation("ClientRefreshTokens")
}

model AuthorizationCode {
  id                  String   @id @default(uuid())
  code                String   @unique
  clientId            String
  redirectUri         String
  userId              String?
  expiresAt           DateTime
  scope               String? // Ensure this field exists
  codeChallenge       String? // For PKCE
  codeChallengeMethod String? // For PKCE, e.g., "S256"
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user   User?  @relation("UserAuthorizationCodes", fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade) // Changed to User?
  client Client @relation("ClientAuthorizationCodes", fields: [clientId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model AccessToken {
  id        String   @id @default(uuid())
  token     String   @unique
  clientId  String
  userId    String?
  expiresAt DateTime
  scope     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User?  @relation("UserAccessTokens", fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade) // Changed to User?
  client Client @relation("ClientAccessTokens", fields: [clientId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  clientId  String
  userId    String?
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User?  @relation("UserRefreshTokens", fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade) // Changed to User?
  client Client @relation("ClientRefreshTokens", fields: [clientId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

// New Models for Resource Management and User Permissions

model Resource {
  id          String   @id @default(uuid())
  name        String   @unique // e.g., "user_profile", "account_balance", "article_creator"
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userPermissions UserResourcePermission[] @relation("ResourcePermissions")
}

model Permission {
  id          String   @id @default(uuid())
  name        String   @unique // e.g., "read", "write", "delete", "administer_users", "read_own_profile", "edit_any_article"
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userPermissions UserResourcePermission[] @relation("ActionPermissions")
}

model UserResourcePermission {
  id           String   @id @default(uuid())
  userId       String
  resourceId   String
  permissionId String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user       User       @relation("UserPermissions", fields: [userId], references: [id], onDelete: Cascade)
  resource   Resource   @relation("ResourcePermissions", fields: [resourceId], references: [id], onDelete: Cascade)
  permission Permission @relation("ActionPermissions", fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([userId, resourceId, permissionId])
}
