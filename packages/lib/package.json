{
  "name": "@repo/lib",
  "version": "1.0.0",
  "description": "Shared library for the monorepo",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "browser": "./src/browser/index.ts",
      "node": "./src/node/index.ts",
      "default": "./src/browser/index.ts"
    },
    "./node": {
      "node": "./src/node/index.ts",
      "default": "./src/node/index.ts"
    },
    "./browser": {
      "browser": "./src/browser/index.ts",
      "default": "./src/browser/index.ts"
    },
    "./middleware": {
      "node": "./src/middleware/index.ts",
      "default": "./src/middleware/index.ts"
    },
    "./api-routes": {
      "default": "./src/api-routes.ts"
    },
    "./OAuthConfig": {
      "default": "./src/config/oauth-config.ts"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/cache": "workspace:*",
    "@repo/database": "workspace:*",
    "@repo/ui": "workspace:*",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "jose": "^5.2.3",
    "bcryptjs": "^2.4.3",
    "bcrypt": "^6.0.0",
    "nanoid": "^5.0.0",
    "uuid": "^11.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.1",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "typescript": "^5.4.3",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^10.0.0"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
