{
  "name": "@repo/zmq-logger-client",
  "version": "0.1.0",
  "description": "ZMQ Logger NAPI bindings for Node.js",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "napi build --release --platform --target node18 --target node20 --target node22",
    "build:debug": "napi build",
    "prebuild": "napi prebuild",
    "prebuild:upload": "napi prebuild --upload",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "postinstall": "node -e \"if (!require('fs').existsSync(require('path').join(__dirname, 'index.node'))) { require('child_process').execSync('npm run prebuild', { stdio: 'inherit' }) }\""
  },
  "keywords": [
    "zmq",
    "logger",
    "napi",
    "rust",
    "nodejs",
    "logging",
    "structured-logging"
  ],
  "author": "ZMQ Logger Team",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@napi-rs/cli": "^3.1.4",
    "jest": "^29.0.0"
  },
  "engines": {
    "node": ">= 18"
  },
  "napi": {
    "name": "zmq-logger-client",
    "triples": {
      "additional": [
        "aarch64-apple-darwin",
        "x86_64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "aarch64-unknown-linux-gnu",
        "x86_64-pc-windows-msvc"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ts-next-template.git",
    "directory": "packages/zmq-logger-client"
  },
  "bugs": {
    "url": "https://github.com/your-org/ts-next-template/issues"
  },
  "homepage": "https://github.com/your-org/ts-next-template/tree/main/packages/zmq-logger-client#readme"
}