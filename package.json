{
  "name": "ts-next-template-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "commit": "cz",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:studio": "turbo db:studio",
    "db:seed": "turbo db:seed",
    "prisma:migrate": "turbo prisma:migrate",
    "e2e": "turbo e2e",
    "e2e:ui": "turbo e2e:ui",
    "e2e:report": "turbo e2e:report"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.21.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.1.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "next": "^15.3.2",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.2"
  },
  "packageManager": "pnpm@10.6.2",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": "@repo/prettier-config"
}
