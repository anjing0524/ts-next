{
  "name": "ts-next-template-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "format": "turbo format",
    "commit": "cz",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:studio": "turbo db:studio",
    "db:seed": "turbo db:seed",
    "prisma:migrate": "turbo prisma:migrate",
    "oauth:setup": "pnpm db:seed",
    "e2e": "turbo e2e",
    "e2e:ui": "turbo e2e:ui",
    "e2e:report": "turbo e2e:report",
    "start:e2e": "pnpm turbo run dev --parallel --filter=admin-portal --filter=oauth-service-rust",
    "dev:kline": "pnpm turbo run dev --parallel --filter=ws-kline-service --filter=kline-service",
    "test:e2e:admin": "start-server-and-test 'pnpm turbo dev --parallel --filter=admin-portal --filter=oauth-service-rust' http://localhost:3002 'pnpm --filter=admin-portal test:e2e'",
    "test:e2e:ci": "pnpm turbo build --filter=admin-portal --filter=oauth-service-rust && start-server-and-test 'pnpm turbo start --parallel --filter=admin-portal --filter=oauth-service-rust' http://localhost:3002 'pnpm --filter=admin-portal test:e2e:integration'",
    "wasm:test": "cd apps/kline-service/wasm-cal && wasm-pack test --headless --chrome",
    "wasm:build": "cd apps/kline-service/wasm-cal && wasm-pack build --target web --out-dir pkg"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.1.0",
    "@playwright/test": "^1.53.1",
    "@prisma/client": "^6.11.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.1",
    "@types/react": "^19.1.9",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild-plugin-preserve-directives": "^0.0.11",
    "eslint": "^9.32.0",
    "eslint-config-next": "^15.4.5",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^15.4.3",
    "next": "^15.4.5",
    "pkce-challenge": "^5.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prisma": "^6.11.1",
    "start-server-and-test": "^2.0.12",
    "tailwindcss": "^4.1.11",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.6.2",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": "@repo/prettier-config"
}
