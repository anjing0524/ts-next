{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["**/*.{ts,tsx,js,jsx,mjs}"],
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["**/*.{ts,tsx}", "**/__tests__/**/*.{ts,tsx}"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": false
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "db:generate": {
      "cache": false,
      "dependsOn": []
    },
    "db:push": {
      "cache": false,
      "dependsOn": ["db:generate"]
    },
    "db:seed": {
      "cache": false,
      "dependsOn": ["db:push"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "prisma:migrate": {
      "cache": false,
      "dependsOn": ["db:generate"]
    },
    "format": {
      "dependsOn": [],
      "outputs": []
    },
    "flatc:generate": {
      "cache": false,
      "dependsOn": []
    },
    "e2e": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": false
    },
    "e2e:ui": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "e2e:report": {
      "cache": false,
      "dependsOn": ["e2e"]
    }
  },
  "globalDependencies": [
    "package.json",
    "pnpm-lock.yaml",
    "tsconfig.json",
    "components.json"
  ],
  "globalEnv": [
    "NODE_ENV"
  ]
}
